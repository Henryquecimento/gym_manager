{% extends "layout.njk" %}

{% block content %}

    <div class="card table-container">
        <a href="/instructors/create">Novo</a>
        <table width="100%">
            <thead>
                <th>Instrutores</th>
                <th>Acompanhamento</th>
                <th>Ação</th>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                <tr>
                    <td>
                        <span style= "background-image: url({{ instructor.avatar_url }})"></span>
                        {{ instructor.name }}</td>
                    <td>
                        {% for services in instructor.services.split(",") %}
                        <span>
                            {{ services }}
                        </span>
                        {% endfor %}
                        </td>
                    <td><a href="/instructors/{{ instructor.id }}">Ver</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}